{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "es6"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "lib",
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "lib",
    "node_modules"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
